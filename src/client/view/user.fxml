<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controller.UserController">
   <children>
      <VBox alignment="CENTER" layoutX="250.0" layoutY="100.0" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label fx:id="infoLabel" text="Hello username, welcome back!">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" spacing="40.0">
               <children>
                  <Button fx:id="onlineButton" mnemonicParsing="false" onAction="#handleOnlineButton" prefWidth="150.0" text="Online users" />
                  <Button fx:id="invitationsButton" mnemonicParsing="false" onAction="#handleInvitationsButton" prefWidth="150.0" text="View invitations" />
               </children>
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="230.0" spacing="40.0">
               <children>
                  <Button fx:id="matchButton" mnemonicParsing="false" onAction="#handleMatchButton" prefWidth="150.0" text="New match" />
                  <Button fx:id="rankingButton" mnemonicParsing="false" onAction="#handleRankingButton" prefWidth="150.0" text="Ranking" />
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </HBox>
            <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogoutButton" prefWidth="100.0" text="Logout">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
